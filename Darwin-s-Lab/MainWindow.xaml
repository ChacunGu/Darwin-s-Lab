<Window x:Class="Darwin_s_Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Darwin_s_Lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF60BD60">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#26000000" Grid.ColumnSpan="3" Grid.RowSpan="3" MouseDown="Rectangle_MouseDown"/>
        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1">
            <Canvas x:Name="canvas" Width="1000" Height="1000">
                <Ellipse Fill="#FF60BD60" Width="1000" Height="1000" />
            </Canvas>
        </Viewbox>
    </Grid>
</Window>